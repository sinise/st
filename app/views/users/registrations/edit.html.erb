<%= render partial: "users/registrations/user_details", locals: {source: "update_profile"} %>

<br>
<br>

<div class="row">
  <div class="col-md-6">

    <h1>Skift kodeord</h1>
    <%= devise_error_messages! %>

    <%= form_for(current_user, :url => user_registration_path(source: "change_password") << '#new-password-form', :html => { :method => :put }) do |f| %>
    	<a name="new-password-form"></a>

      <div class="form-group">
        <%= f.label :password, 'Nyt kodeord *' %> <span class="help-inline">(min. 8 tegn)</span>
        <%= f.password_field :password, :autocomplete => "off", :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Bekræft nyt kodeord *' %> <span class="help-inline">(min. 8 tegn)</span>
        <%= f.password_field :password_confirmation, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, 'Nuværende kodeord *' %>
        <%= f.password_field :current_password, :class => "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Skift kodeord", :class => "btn btn-lg btn-primary" %>
      </div>

    <% end %>

  </div>
</div>