<div class="page-header">
	<h4>Company: <%= @company.name %></h4>
	<h4>Department: <%= @department.name %></h4>
</div>


<div class="row">
	<div class="col-md-4">
		
		<% if (notice) %>
			<div class="alert alert-info"><%= notice %></div>
		<% end %>

		<p>
		  <strong>Navn:</strong><br>
		  <%= @department.name %>
		</p>

		<p>
		  <strong>Telefon:</strong><br>
		  <%= @department.phone %>
		</p>

		<p>
		  <strong>Email:</strong><br>
		  <%= @department.email %>
		</p>


		<div class="form-actions">
			<%= link_to 'Ret department', edit_admins_company_department_path(@company, @department), :class => "btn btn-primary" %>
			<%= link_to 'Tilbage', admins_company_path(@company), :class => "btn btn-lnk pull-left" %>
		</div>

	</div>

	<div class="col-md-8">
		<strong>Sections:</strong><br>
		<div class="text-right">
			<%= link_to 'Ny section', new_admins_company_department_section_path(@company, @department), :class=>'btn btn-primary' %>
		</div>
		<table class="table table-striped table-tight">
		  <thead>
		    <tr>
		      <th>Navn</th>
		      <th>Telefon</th>
		      <th>Email</th>
		      <th></th>
		    </tr>
		  </thead>

			<tbody>
		    <% @department.sections.each do |section| %>
		      <tr>
		        <td><%= section.name %></td>
		        <td><%= section.phone %></td>
		        <td><%= section.email %></td>
		        <td class="text-right">
			        <%= link_to 'Ret', edit_admins_company_department_section_path(@company, @department, section), { :class=>'btn btn-sm btn-primary' } %>
			        <%= link_to 'Slet', admins_company_department_section_path(@company, @department, section), :class=>'btn btn-sm btn-primary' , method: :delete, data: { confirm: 'Er du sikker?' } %>
			      </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>

