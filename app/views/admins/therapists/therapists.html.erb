<div class="page-header">
	<div class="row">
		<div class="col-md-6">
			<h1>Therapists</h1>
		</div>
		<div class="col-md-6 text-right">
			<%= link_to 'Ny therapist', new_therapist_registration_path, :class=>'btn btn-primary' %>
		</div>
	</div>
</div>

<table class="table table-striped table-tight">
	<thead>
		<tr>
			<th>Navn</th>
			<th>Gender</th>
			<th>Email</th>
			<th>Nr of Clients</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @therapists.each do |t| %>
			<tr>
				<td><%= t.full_name %></td>
				<td><%= t.gender %></td>
				<td><%= t.email %></td>
				<td><%= t.clients.count %></td>
				<td class="text-right">
	        <%= link_to 'Vis', '/admins/therapist/' << t._id, { :class=>'btn btn-sm btn-primary' } %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>


