<% if @articles.any? %>

<div class="page-header">
	<h1>Mine opgaver</h1>
</div>

<!--div><%= paginate @articles %></div-->

<table class="table table-striped table-tight">
	<thead>
		<tr>
			<th>Article</th>
			<th>Assigned at</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @articles.each do |a| %>
			<tr>
				<td><%= a.article.name %></td>
				<td><%= time_ago_in_words(a.assigned_at) %> siden</td>
				<td><%= link_to 'Vis article', assignments_path(a), { :class=>'btn btn-sm btn-primary' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<% end %>